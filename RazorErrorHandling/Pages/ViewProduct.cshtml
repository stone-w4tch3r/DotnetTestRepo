@page
@model ViewProductModel
@{
    ViewData["Title"] = "View Product";
}

<h1>View Product</h1>

@if (Model.Product != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Product.Name</h5>
            <p class="card-text">Price: $@Model.Product.Price</p>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        Product not found.
    </div>
}

<a asp-page="/Index">Back to Home</a>